.header {
  position: relative;
}

.title {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  font-weight: bold;
  background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8));
}

.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}