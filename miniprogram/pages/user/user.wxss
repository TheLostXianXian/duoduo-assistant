.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: transparent;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: transparent;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.placeholder {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  text-align: center;
}

.plain-button {
  background: transparent;
  border: 1rpx solid #b39b54;
  border-radius: 0;
}

.plain-button-clicked {
  /* 这里透明度有点问题 */
  opacity: 0.9;
  background: #666;
}

