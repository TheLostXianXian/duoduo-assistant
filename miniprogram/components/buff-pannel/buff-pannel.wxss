/* components/buff-pannel/buff-pannel.wxss */

.buff-pannel-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.buff-img {
  width: 40rpx;
  height: 40rpx;
}

.buff-item {
  padding: 0 4rpx;
}

.buff-level {
  display: flex;
  align-items: center;
  width: 100%;
}

.buff-level-bg {
  flex-grow: 1;
  margin: 0 2rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: black;
}

.buff-level-active {
  background: yellow;
}